<html>
<head>
    <link rel="stylesheet" href="stylesheets/contact.css">
    <style>
        #navbarNav>ul>li.nav-item.contact>a {
            color: #dc3545;
        }
    </style>
</head>
<body>

    <!-- Contact Start -->
    {{!-- bootstrap container-fluid --}}
    <div class="container-fluid py-5" id="contact">
        <div class="container">
            <div class="position-relative d-flex align-items-center justify-content-center">
                {{!-- background text --}}
                <h1 id="bg-text" class="display-1 text-uppercase text-white">Contact</h1>
                {{!-- forground text, while will be on top of previous element --}}
                <h1 id="fg-text" class="position-absolute text-uppercase">Contact Me</h1>
            </div>
            
            <div class="justify-content-center">
                {{!-- create form eleent --}}
                <form>
                    <div class="form-group">
                        {{!-- link "Name" label with "input" element --}}
                        <label for="exampleInputName">Name</label>
                        {{!-- data-validation-required-message: if user try to keep the field blank then he/she gets message --}}
                        <input type="text" class="form-control" id="exampleInputName" placeholder="Enter Your Name"
                            required="required" data-validation-required-message="Please enter your name">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail">Email</label>
                        <input type="email" class="form-control" id="exampleInputEmail" aria-describedby="emailHelp"
                            placeholder="Enter Your email" required="required"
                            data-validation-required-message="Please enter your email">
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                            else.</small>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputTextarea">Message</label>
                        <textarea class="form-control" id="exampleInputTextarea" placeholder="Enter Your Message"
                            cols="30" rows="8"></textarea>
                    </div>

                    {{!-- btn-danger: red color --}}
                    <button type="submit" class="btn btn-danger">Submit</button>
                </form>
            </div>
        </div>
    </div>
    <!-- Contact End -->

</body>

</html>